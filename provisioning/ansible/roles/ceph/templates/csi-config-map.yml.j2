---
apiVersion: v1
kind: ConfigMap
data: 
  config.json: |-
    [
      {
        "clusterID": "{{ ceph_kubernetes_fsid.msg }}",
          "monitors": [
            "{{ mon1 }}:{{ mon_port }}",
            "{{ mon2 }}:{{ mon_port }}",
            "{{ mon3 }}:{{ mon_port }}"
        ]
      }
    ]
metadata:
  name: ceph-csi-config

---
apiVersion: v1
kind: ConfigMap
data: 
  config.json: |-
    {}
metadata:
  name: ceph-csi-encryption-kms-config

---
apiVersion: v1
kind: Secret
metadata:
  name: csi-rbd-secret
  namespace: default
stringData:
  userID: kubernetes
  userKey: {{ ceph_kubernetes_auth_key.msg }}
