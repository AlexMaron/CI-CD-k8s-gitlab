version: '3.7'

services:
  minio:
    image: minio/minio:RELEASE.2021-06-17T00-10-46Z-28-gac7697426
    hostname: minio
    volumes:
      - data1:/mnt/data1
      - data2:/mnt/data2
    expose:
      - "9000"
    environment:
      MINIO_ROOT_USER: {{ minio_user }}
      MINIO_ROOT_PASSWORD: {{ minio_password }}
    command: server http://minio/data{1...2}
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:9000/minio/health/live"]
      interval: 30s
      timeout: 30s
      retries: 3s

volumes:
  data1:
  data2:
